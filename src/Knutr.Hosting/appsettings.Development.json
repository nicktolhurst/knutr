{
  "Knutr": {
    "DisplayName": "Knutr",
    "Aliases": [ "knutr" ],
    "Addressing": {
      "ReplyInDMs": true,
      "ReplyOnTag": true
    }
  },
  "Slack": {
    "EnableSignatureValidation": false,
    "SigningSecret": "",
    "BotToken": ""
  },
  "LLM": {
    "Provider": "Ollama",
    "BaseUrl": "http://localhost:11434",
    "Model": "llama3",
    "ApiKey": ""
  },
  "OpenTelemetry": {
    "Tracing": {
      "Enabled": true,
      "SampleRatio": 0.1,
      "OtlpEndpoint": "http://localhost:4317"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Knutr": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ]
  }
}
